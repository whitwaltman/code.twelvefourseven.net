---
pagination:
    data: collections.tagList
    size: 1
    alias: tag
permalink: /tags/{{ tag }}/
---

<h1>Posts tagged "{{ tag }}"</h1>
{% set postlist = collections[ tag ] %}
<ul>
    {% for post in postlist | reverse %}
        <li><a href="{{ post.url }}">
            {{ post.data.title or post.fileSlug }}
        </a></li>
    {% endfor %}
</ul>